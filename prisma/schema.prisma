
datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}



model PracticeSession {
  id Int @id @default(autoincrement())
  title String
  description String
  startTime DateTime
  endTime DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user User @relation(fields: [userId], references: [id])
  userId Int
  notes String
  uploadedFiles String
  isPublic Boolean @default(false)
  @@index([userId])
}

model User {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  email String @unique
  clerkId  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  practiceSessions PracticeSession[]
  userProfile UserProfile?
  userProfileId Int?
}

model Instruments {
  id Int @id @default(autoincrement())
  name String @unique
  users UserProfile[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model UserProfile {
  id Int @id @default(autoincrement())
  screenName String @unique
  user User @relation(fields: [userId], references: [id])
  userId Int @unique 
  bio String?
  location String?
  instruments Instruments[]
  website String?
  avatar String?
  isPublic Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}